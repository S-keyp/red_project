<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link rel="stylesheet" href="{{ asset('/assets/css/base/base.css') }}">

		{% block stylesheets %}

			{{ encore_entry_link_tags('app') }}
			<link href="assets/css/base/base.css" rel="stylesheet" type="text/css"/>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
		{% endblock %}
	</head>

	<body>
		{% block navigation %}
			<div class="preNav row justify-content-around">
				<div class="logo col-2"><img src="./../../assets/img/index/Jobster1.png" width="40%"></div>
				{% if app.user %}
					<div class="identLink text-end my-2 col-5">
						You are logged in as
						{{ app.user.username }}
						<br>
						<a href="{{ path('app_logout') }}">Déconnexion</a>
					</div>
					<a href="{{ path ('modify_pro', {id: app.user.id})}}" class="prospace my-2 col-2">ESPACE PRO</a>	
				{% else %}
					<a href="{{ path('app_login') }}" class="identLink" style="float:right;margin-top: 20px; margin-left: 20px;">Identification</a>
					<a href="{{ path ('proform')}}" class="prospace mx-2 my-2 mb-0" style="float:right; margin-top: 15px; margin-left: 20px;">ESPACE PRO</a>
				{% endif %}
				
			</div>
			<nav class="navbar navbar-expand-lg navbar-dark">
				<div class="container-fluid">
					<a class="navbar-brand" href=""></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{path('homepage')}}">Accueil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('professional')}}">Découvrir les professionnels</a>
							</li>
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('modifyfichepro', {id: app.user.id})}}">Proposer mes services</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('proform')}}">Proposer mes services</a>
								</li>
							{% endif %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('contact')}}">Contact</a>
							</li>
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('cart_index')}}">Panier</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_login')}}">Proposer mes services</a>
								</li>
							{% endif %}
							
						</ul>
					</div>
				</div>
			</nav>
		{% endblock %}
		{% block body %}{% endblock %}
		<footer>
			{% block footer %}
				<div class="footer">
					<ul class="colList">
						<li class="titleCol">Liens utiles</li>
						<li>
							<a href="https://localhost:8000/professional/searchresults" class="itemFooter">Trouver un professionnel</a>
						</li>
						<li>
							<a href="https://localhost:8000/professional" class="itemFooter">Devenir professionnel</a>
						</li>
						<li>
							<a href="https://localhost:8000/login" class="itemFooter">Créer un compte</a>
						</li>
						<li>
							<a href="https://localhost:8000/login" class="itemFooter">S'identifier</a>
						</li>
					</ul>
					<ul class="colList">
						<li class="titleCol">Social</li>
						<li>
							<a href="https://twitter.com" class="itemFooter">Twitter</a>
						</li>
						<li>
							<a href="https://instagram.com" class="itemFooter">Instagram</a>
						</li>
						<li>
							<a href="https://example.com" class="itemFooter">Laisser un avis</a>
						</li>
						<li>
							<a href="https://exemple.com" class="itemFooter">Mentions légales</a>
						</li>
					</ul>

				</div>


				<div class="footerCopy">
					<p>MENTIONS LEGALES | 2022 JOBSTER</p>
				</div>
			{% endblock %}
		</footer>
	</body>
</html>
