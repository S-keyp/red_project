{% extends 'base.html.twig' %}

{% block title %}Mon Panier
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h1>Votre Panier</h1>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantité</th>
				<th>Total</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>

{% if dataPanier %}


			{% for element in dataPanier %}
				<tr>
					<td>{{element.proBundles.titleService}}</td>


					<td>{{element.proBundles.servicePrice}}€</td>

					<td>{{element.quantite}}</td>
					<td>{{element.quantite * element.proBundles.servicePrice}}€</td>

					<td>
						<a href="{{path("cart_add", {id: element.proBundles.id})}}" class="btn btn-success">
							Ajouter 1
							<i class="bi bi-cart-plus"></i>
						</a>
						<a href="{{path("cart_remove", {id: element.proBundles.id})}}" class="btn btn-warning">
							Supprimer 1
							<i class="bi bi-cart-dash"></i>
						</a>
						<a href="{{path("cart_delete", {id: element.proBundles.id})}}" class="btn btn-danger">
							Supprimer tout
							<i class="bi bi-cart-x"></i>
						</a>
					</td>
				</tr>
			</tbody>
		</tbody>
	</td>


</tbody></tr>{% else %}<tr>
<td colspan="5" class="text-center">Votre Panier est vide</td>

</tr>{% endfor %}{% endif %}</tbody><tfoot></tfoot><tr><td colspan="3">Total</td><td colspan="text-end">{{ total }}€</td><td></td></tr></table>


{% if dataPanier %}

<div class="container"><a href="/cart/confirm" class="btn btn-success">Valider le panier<i class="bi bi-cart-dash"></i></a></div>



{% else %}

<div class="container">
<a href="/professional" class="btn btn-warning">Compléter mon panier

	</a>
</div>

{% endif %}





{% endblock %}
