{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ encore_entry_link_tags('app') }}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link href="/assets/css/contact/contact.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block title %}Formulaire de contact{% endblock %}

{% block body %}
<div class="titreimage">
    <div class="titlebrand py-5 text-center mt-5">
        <h1>Formulaire de contact</h1>
        <p class="lead">Contacter les administrateurs de site</p>
    </div>
    <img src="/assets/img/index/vaguetop.svg" alt="" srcset="">
</div>
<h3 class="text-center art-degrade">NOUS CONTACTER</h3>
<div class="container formcomple">
    <div class="row presta">
        <div class="col-12-md-9">
            {{ form_start(our_form) }}
            {{ form_row(our_form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}
        </div>
    <div class="container boutonajouter">
        <input type="submit" value="Envoyer" class="btn btn-primary py-3 px-5">
    </div>
            {{ form_end(our_form) }}
    </div>
</div>
{% endblock %}
