{% extends "base.html.twig" %}

{% block title %}Formulaire user - Inscription utilisateur{% endblock %}

{% block stylesheets %}

            {{ encore_entry_link_tags('app') }}
<link href="/assets/css/formulaires/formuser.css" rel="stylesheet" type="text/css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

{% endblock %}

{% block body %}

<main class="container">

            <div class="py-5 text-center mt-5">
                <h2 class="soustitre">Inscription utilisateur</h2>
                <p class="lead">Veuillez compléter le formulaire ci-dessous afin d'enregistrer vos informations.</p>
            </div>
 
                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3">Adresse</h4>
                    <form>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="nom" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="nom" placeholder="" value="" required>
                            </div>
 
                            <div class="col-sm-6">
                                <label for="prenom" class="form-label">Prénom</label>
                                <input type="text" class="form-control" id="prenom" placeholder="" value="" required>
                            </div>
                            
                            <div class="col-12">
                                <label for="address" class="form-label">Adresse</label>
                                <input type="text" class="form-control" id="address" placeholder="14 Avenue de la siliconvallée" required>
                            </div>

                            <div class="col-12">
                                <label for="email" class="form-label">Email
                                </label>
                                <input type="email" class="form-control" id="email" placeholder="mon-email@gmail.com">
                            </div>
 
                            <div class="col-md-5">
                                <label for="pays" class="form-label">Pays</label>
                                <select class="form-select" id="pays" required>
                                    <option value="">Sélectionner...</option>
                                    <option>France</option>
                                </select>
                            </div>
 
                            <div class="col-md-3">
                                <label for="zip" class="form-label">Code postal</label>
                                <input type="text" class="form-control" id="zip" placeholder="" required>
                            </div>
                            
                        </div>

                        <div class="col-md-3">
                                <label for="telephone" class="form-label">Téléphone</label>
                                <input type="text" class="form-control" id="zip" placeholder="" required>
                            </div>

                        <hr class="my-4">

                        <h4 class="mb-3">Enregistrer mes moyens paiements</h4>

                <div class="row g-3">
                    <div class="col-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="Carte bancaire sécurisée">
                            <label class="form-check-label" for="Carte bancaire sécurisée">Carte bancaire sécurisée</label>
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="RIB">
                            <label class="form-check-label" for="RIB">Relevé d'identité bancaire</label>
                        </div>
                    </div>

                    <div class="col-4">    
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="Paypal">
                            <label class="form-check-label" for="Paypal">PayPal</label>
                        </div>
                    </div>

                        <div class="input-field col s12 m12 l12">
                            <input type="submit" name="" value="Ajouter un moyen de paiement" class="ajouter">
                        </div>
                        
                    <hr class="my-4">

                </div>
            </div>

            <div class="row deuxboutons">
                        <div class="input-field col-6">
                            <button class="retour btn " type="submit">Retour</button>
                        </div>
                        <div class="input-field col-6">
                            <button class="enregistrer btn " type="submit">Enregistrer</button>
                        </div>
            </div>
                    </form>
                </div>
            </div>
        </main>
    
{% endblock %}

