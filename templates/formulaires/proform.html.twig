{% extends "base.html.twig" %}

{% block title %}Formulaire pro - Inscription professionnel{% endblock %}
{% block stylesheets %}

<link href="/assets/css/formulaires/formpro.css" rel="stylesheet" type="text/css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

{% endblock %}

{% block body %}

<main>
    {% if app.user %}
        <div class="py-5 text-center mt-5">
            <h1>Modifier votre compte professionnel</h1>
        </div>
    {% else %}
        <div class="py-5 text-center mt-5">
            <h1>Inscription professionnel</h1>
            <p class="lead">Veuillez compl√©ter le formulaire professionnel ci-dessous afin d'enregistrer vos informations.</p>
        </div>
    {% endif %}
    
<div class="container">
    <div class="row background">
        {{ form_start(form_professional, {
            'attr': {
                'novalidate': 'novalidate',
                    'class': 'col-lg-5 mx-auto w-100' 
                        }
                    })
                }}

<div class="row">
    <div class="col-6">
        {{  form_row(form_professional.firstname) }}
        {{  form_row(form_professional.society_name) }}
    </div>
    <div class="col-6">       
            {{  form_row(form_professional.lastname) }}
            {{  form_row(form_professional.siret) }}
    </div>
        {{  form_row(form_professional.adress) }}    
    <div class="row">
        
        <div class="col-6">
            {{  form_row(form_professional.code_postal) }}
            {{  form_row(form_professional.tel) }}
            {{  form_row(form_professional.country) }}
        </div>

        <div class="col-6">
            {{  form_row(form_professional.description) }}
            {{  form_row(form_professional.profile_picture) }}
        </div>
    </div>

    <hr class="my-4">
    <div class="row">
        <div class="col-6">
            {{  form_row(form_professional.username) }}
        </div>

        <div class="col-6">
            {{  form_row(form_professional.email) }}
        </div>

        {{  form_row(form_professional.password) }}
    </div>

    <hr class="my-4">

    {{  form_row(form_professional.save) }}
    
    {{form_end(form_professional)}}
</main>
{% endblock %}

