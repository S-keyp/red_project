<main>
    <div class="py-5 text-center mt-5">
        <h1>Inscription professionnel</h1>
        <p class="lead">Veuillez compléter le formulaire professionnel ci-dessous afin d'enregistrer vos informations.</p>
    </div>
    
<div class="container">
    <div class="row background">
        {{ form_start(form_professional, {
            'attr': {
                'novalidate': 'novalidate',
                    'class': 'col-lg-5' 
                        }
                    })
                }}

<div class="row">
    <div class="col-6">
        {{  form_row(form_professional.firstname) }}
        {{  form_row(form_professional.society_name) }}
    </div>
<div class="col-6">       
        {{  form_row(form_professional.lastname) }}
        {{  form_row(form_professional.siret) }}
</div>
        {{  form_row(form_professional.adress) }}    
<div class="row">
    <div class="col-6">
        {{  form_row(form_professional.code_postal) }}
        {{  form_row(form_professional.tel) }}
    </div>
    <div class="col-6">
        {{  form_row(form_professional.country) }}
    </div>

<hr class="my-4">

        {{  form_row(form_professional.email) }}
        {{  form_row(form_professional.password) }}

<hr class="my-4">

        {{  form_row(form_professional.prestation) }}
        
<hr class="my-4">

        {{  form_row(form_professional.save) }}
        
</div>
</main>



