{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="/assets/css/fichepro/fichepro.css" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block title %}Fiche du Professionnel - Jobster
{% endblock %}

{% block body %}
    <div class="titreimage">
        <div class="titlebrand py-5 text-center mt-5">
                <h1>Fiche Professionnel</h1>
                    <p class="lead">Mon profil de compétences</p>
        </div>

        <img src="/assets/img/index/vaguetop.svg" alt="" srcset="">

    </div>
    
    <div class="container card">
        <div class="row">
            <div class="col-md-12 carte">
                <div class="row" style="margin-top:30px;">
                    <div class="row03">
                        <div class="col-md-4 text-center">
                            <img src="./../assets/img/pro/fauxgraphiste.jfif" style="width:65%;">
                        </div>
                        <div class="col-md-4 text-center">
                            <h3>{{user.lastname}}</h3>
                        </div>
                        <div class="col-md-4 text-center">
                            <h3>{{user.firstname}}</h3>
                        </div>
        </div>
            </div>

            
                <div class="row">
                    {% if user.description %}
                        <div class="col-4-md-7 desc">
                            <p class="texte"> {{user.description}}</p>
                        </div>
                    {% else %}
                        <div class="col-4-md-7 desc">
                            <p class="text-center" style="font-size:1.5rem;">On ne peut pas être bon dans tous les domaines.<br>C'est pourquoi je suis devenu graphiste :)<br>
                            Je crée vos logos et personnalise vos pages web.</p>
                        </div>
                    {% endif %}
                    
                </div>
                <hr class="my-4">

                <div class="row">
                    <h3 class="text-center">Mes Prestations</h3>
                    {% if bundles %}
                        {% for bundle in bundles %}
                            <div class="col-md-7 prestation">
                            <input type="hidden" value="{{bundle.id}}"></input>
                                {{bundle.titleService}}<br>
                                {{bundle.descriptionService}}<br>
                                {{bundle.servicePrice}}<br>
                            {% if bundle.serviceCategory == 1 %}
                                Graphiste
                            {% endif %}
                            {% if bundle.serviceCategory == 2 %}
                                Développeur
                            {% endif %}
                            {% if bundle.serviceCategory == 3 %}
                                Référencement
                            {% endif %}

                                <div class="promo">
                                    <div class="title">500 euros</div>
                                        <div class="expire">Expire dans 6 jours!</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <a href="{{path("panier_add", {id: produit.id})}}" class="btn btn-primary" style="float:right;margin:10px;">Ajouter au panier</a>
                            </div>
                        {% endfor %}               
                    {% else %}

                    {% endif %}
                    
                </div>
            </div>
        </div>
    </div>

		<img src="/assets/img/index/vaguetop.svg" alt="" srcset="">

	</div>

	<div class="container card">
		<div class="row">
			<div class="col-md-12 carte">
				<div class="row" style="margin-top:30px;">
					<div class="row03">
						<div class="col-md-4 text-center">
							<img src="./../assets/img/pro/fauxgraphiste.jfif" style="width:65%;">
						</div>
						<div class="col-md-4 text-center">
							<h3>{{user.lastname}}</h3>
						</div>
						<div class="col-md-4 text-center">
							<h3>{{user.firstname}}</h3>
						</div>
					</div>
				</div>


				<div class="row">
					{% if user.description %}
						<div class="col-4-md-7 desc">
							<p class="texte">
								{{user.description}}</p>
						</div>
					{% else %}
						<div class="col-4-md-7 desc">
							<p class="text-center" style="font-size:1.5rem;">On ne peut pas être bon dans tous les domaines.<br>C'est pourquoi je suis devenu graphiste :)<br>
								Je crée vos logos et personnalise vos pages web.</p>
						</div>
					{% endif %}

				</div>
				<hr class="my-4">

				<div class="row">
					<h3 class="text-center">Mes Prestations</h3>
					{% if bundles %}
						{% for bundle in bundles %}
							<div class="col-md-7 prestation">
								<input type="hidden" value="{{bundle.id}}"></input>
							{{bundle.titleService}}<br>
							{{bundle.descriptionService}}<br>
							{{bundle.servicePrice}}<br>
							{% if bundle.serviceCategory == 1 %}
								Graphiste
							{% endif %}
							{% if bundle.serviceCategory == 2 %}
								Développeur
							{% endif %}
							{% if bundle.serviceCategory == 3 %}
								Référencement
							{% endif %}

							<div class="promo">
								<div class="title">{{bundle.servicePrice}}
									euros</div>

								<div class="expire">Expire dans 6 jours!</div>
							</div>
						</div>

						<div class="col-md-4">
							<a href="{{path("cart_add", {id: bundle.id})}}" class="btn btn-primary" style="float:right;margin:10px;">Ajouter au panier</a>
						</div>

					{% endfor %}
					{% else %}

				{% endif %}

			</div>
		</div>
	</div>
</div>{% endblock %}
