{% extends 'base.html.twig' %}

{% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/assets/css/fichepro/fichepro.css" rel="stylesheet" type="text/css"/>

        {% endblock %}

{% block title %}Fiche du Professionnel - Jobster{% endblock %}

{% block body %}
    <div class="titreimage">
        <div class="titlebrand py-5 text-center mt-5">
                <h1>Fiche Professionnel</h1>
                    <p class="lead">Ajouter une prestation</p>
        </div>

        <img src="/assets/img/index/vaguetop.svg" alt="" srcset="">
        
    </div>
    
    <div class="container card">
        <div class="row">
            <div class="col-md-12 carte">
                <div class="row" style="margin-top:30px;">
                    <div class="col-md-6 photo">
                        <img src="./../assets/img/pro/327_SkVNQSBGQU1PIDUxNC00NQ.jpg" style="width:20%;">
                    </div>
                    
                    <div class="col-md-6">
                        <h3>{{user.firstname}}</h3>
                        <h3>{{user.lastname}}</h3>
                    </div>
                </div>
                <div class="row">
                    {% if user.description %}
                        <div class="col-md-7 desc">
                            <p class="texte"> {{user.description}}</p>
                        </div>
                    {% else %}
                        <div class="col-md-7 desc">
                            <p class="texte"> Motivé et dynamique tananananna
                                tanananananananananananananan
                                nanananananannananan</p>
                        </div>
                    {% endif %}
                    <div class="col-md-4 description">
                        <p class="text-black" style="font-size:1.5rem;">A partir de 500€</p>
                    </div>
                </div>
                <div class="row">
                    <h4 class="text-center">Mes Prestations</h4>
                    {% if bundles %}
                        {% for bundle in bundles %}
                            <div class="col-md-7 prestation">
                            <input type="hidden" value="{{bundle.id}}"></input>
                                {{bundle.titleService}}<br>
                                {{bundle.descriptionService}}<br>
                                {{bundle.servicePrice}}<br>
                                {{bundle.serviceCategory}}<br>
                            </div>

                            <div class="col-md-4">
                                <a href="" class="btn btn-primary" style="float:right;margin:10px;">Ajouter au panier</a>
                            </div>
                        {% endfor %}               
                    {% else %}

                    {% endif %}
                    
                </div>
            </div>
        </div>
    </div>

{% endblock %}

