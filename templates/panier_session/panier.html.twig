{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre Panier</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}
                <tr>
                    <td>{{element.produit.name}}</td>
                    <td class="text-end">{{element.produit.TitleService}} €</td>
                    <td>{{element.quantite}}</td>
                    <td class="text-end">{{element.quantite * element.produit.servicePrice}} €</td>
                    <td>
                        <a href="{{path("panier_add", {id: element.produit.id})}}" class="btn btn-success"><i class="bi bi-cart-plus"></i></a>
                        <a href="{{path("panier_remove", {id: element.produit.id})}}" class="btn btn-warning"><i class="bi bi-cart-dash"></i></a>
                        <a href="{{path("panier_delete", {id: element.produit.id})}}" class="btn btn-danger"><i class="bi bi-cart-x"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre Panier est vide</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
        </tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td colspan="text-end">{{ total }} €</td>
                <td></td>
            </tr>
    </table>
{% endblock %}
